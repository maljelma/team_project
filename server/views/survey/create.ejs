<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%= title %></h1>

            <form class= "form" method="POST">

                <div class="form-group">
                    <lable for="nameUserTextField">User Name</lable>
                    <input type="hidden" class="form-control"
                    id="nameUserTextField"
                    placeholder="31/12/2020"
                    value="<%= displayname %>"
                    name="nameUser" required>
                </div>

                <div class="form-group">
                    <lable for="titleTextField">Title</lable>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Survey title"
                    name="title" required>
                </div>

                <!-- Text Field -->
                <div class="form-group">
                    <lable for="entryTextField">Text field</lable>
                    <input type="text" class="form-control"
                    id="entryTitleTextField"
                    placeholder="Title"
                    name="textFieldTitle" required>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Place holder"
                    name="textFieldPlaceHolder" required>
                </div>

                <!-- Select -->
                <div class="form-group">
                    <lable for="entryTextField">Select options</lable>
                    <!-- Title -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Title"
                    name="selectTitle" required>
                    <!-- Option 1 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 1"
                    name="selectOption1" required>
                    <!-- Option 2 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 2"
                    name="selectOption2" required>
                    <!-- Option 3 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 3"
                    name="selectOption3" required>
                </div>
                
                <!-- MCQ -->
                <div class="form-group">
                    <lable for="entryTextField">MCQ</lable>
                    <!-- Title -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Title"
                    name="mcqTitle" required>
                    <!-- Option 1 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 1"
                    name="mcqOption1" required>
                    <!-- Option 2 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 2"
                    name="mcqOption2" required>
                    <!-- Option 3 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 3"
                    name="mcqOption3" required>
                    <!-- Option 4 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Option 4"
                    name="mcqOption4" required>
                </div>

                <!-- MCQ Title -->
                <div class="form-group">
                    <lable for="entryTextField">MCQ Titles</lable>
                    <!-- MCQ Title 1 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Title 1"
                    name="mcqTitle1" required>
                    <!-- MCQ Title 2 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Title 2"
                    name="mcqTitle2" required>
                    <!-- MCQ Title 3 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Title 3"
                    name="mcqTitle3" required>
                    <!-- MCQ Title 4 -->
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Title 4"
                    name="mcqTitle4" required>
                </div>


                <!-- Date Start -->
                <div class="form-group">
                    <lable for="dateStartTextField">Start Date</lable>
                    <input type="date" class="form-control"
                    id="dateStartTextField"
                    name="dateStart" required>
                </div>

                <!-- Date End -->
                <div class="form-group">
                    <lable for="dateEndTextField">End Date</lable>
                    <input type="date" class="form-control"
                    id="dateEndTextField"
                    name="dateEnd" required>
                </div>

                <!-- Submit Button -->
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Add 
                </button>

                <!-- Cancel Button -->
                <a href="/home" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel 
                </a>
                <br><br><br><br>
            </form>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>